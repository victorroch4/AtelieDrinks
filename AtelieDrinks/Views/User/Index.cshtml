@{
    ViewData["Title"] = "User";
}

<div class="manage-profile">

    <div class="manage-profile-title">DADOS DA CONTA </div>
    <hr>
    <!-- edit profile page -->
    <div class="edit-profile-section">
        <div class="manage-profile-subtitle">Imagem de perfil</div>
        <form action="" method="post" class="manage-profile-form">

            <!--   profile pic here -->

            <div class="center">
                <div class="form-input">
                    <div class="preview">
                        <img id="file-ip-1-preview">
                    </div>
                    <label for="file-ip-1">Upload Image</label>
                    <input type="file" id="file-ip-1" accept="image/*" onchange="showPreview(event);">

                </div>
            </div>

            <div class="manage-profile-txt-field">
                <label for="" class="manage-profile-label">Nome</label>
                <input type="text" name="" id="">
            </div>
            <div class="manage-profile-txt-field">
                <label for="" class="manage-profile-label">Usuario</label>
                <input type="text" name="" id="">
            </div>

            <div class="manage-profile-txt-field">
                <label for="" class="manage-profile-label">e-mail</label>
                <input type="text" name="" id="">
            </div>

            <div class="manage-profile-txt-field">
                <label for="" class="manage-profile-label">Telefone</label>
                <input type="text" name="" id="">
            </div>
            <a href="" class="btn">update profile</a>
        </form>
    </div>
    <hr>
    <!-- change password  -->
    <div class="manage-profile-subtitle">change password</div>

    <form action="" method="post" class="manage-profile-form">
        <div class="manage-profile-txt-field">
            <label for="" class="manage-profile-label">Senha antiga</label>
            <input type="password" name="" id="">
        </div>
        <div class="manage-profile-txt-field">
            <label for="" class="manage-profile-label">Senha Nova</label>
            <input type="password" name="" id="">
        </div>
        <div class="manage-profile-txt-field">
            <label for="" class="manage-profile-label">confirmar nova senha</label>
            <input type="password" name="" id="">
        </div>
        <a href="" class="btn">update nova senha</a>
    </form>
    <hr>

    <!-- delete account -->
    <div class="manage-profile-subtitle">delete account</div>

    <div class="manage-profile-close">
        <p>
            Ao excluir sua conta, você não poderá recuperar o conteúdo ou as informações que compartilhou.
            <span> Warning:</span>Fechar sua conta é irreversível.
        </p>
        <a href="" class="btn">deletar conta</a>
    </div>

</div>

<style>

    /* ---------- Pagina de Usuario ---------- */

    * {
        margin: 0;
        padding: 0;
    }

    html, body {
        font-family: sans-serif;
    }
    /*preview img*/
    .center {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }



    .form-input input {
        display: none;
    }

    .form-input label {
        display: block;
        width: 45%;
        height: 45px;
        margin-top: 30px;
        margin-left: 27%;
        margin-right: 27%;
        line-height: 50px;
        text-align: center;
        background: #009688;
        color: #fff;
        font-size: 15px;
        text-transform: Uppercase;
        font-weight: 600;
        border-radius: 5px;
        cursor: pointer;
    }

    .form-input .preview {
        height: 200px;
        width: 200px;
        border: 2px dashed #222;
        border-radius: 50%;
        margin: 0 auto;
    }

    .form-input img {
        width: 100%;
        height: 200px;
        width: 200px;
        border-radius: 50%;
        display: none;
        margin-bottom: 30px;
    }
    /* edit profile form */
    .manage-profile-form {
        display: flex;
        flex-direction: column;
        gap: 1.8em;
    }

    .manage-profile {
        padding-left: 75px;
        padding-right: 75px;
    }

    .manage-profile-title {
        text-transform: capitalize;
        font-size: 30px;
        padding-top: 30px;
        padding-bottom: 10px;
        color: #fff;
    }

    .manage-profile hr {
        margin-top: 25px;
        margin-bottom: 25px;
        color: #444;
    }

    .manage-profile-subtitle {
        text-transform: capitalize;
        font-size: 23px;
        font-weight: 600;
        color: #FFF;
    }

        .manage-profile-subtitle::after {
            content: "";
            display: block;
            width: 3rem;
            height: 6px;
            background: #009688;
            margin-bottom: 25px;
            border-radius: 5px;
        }

    .manage-profile-txt-field {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        color: #fff;
    }

    .manage-profile-label {
        text-transform: capitalize;
        font-size: 18px;
        font-weight: 400;
    }

    .manage-profile-txt-field input,
    .manage-profile-txt-field textarea {
        padding: 9px;
        border-radius: 5px;
        border: 1px solid #222;
        outline: none;
        font-size: 18px;
    }

        .manage-profile-txt-field input:focus,
        .manage-profile-txt-field textarea:focus {
            border: 1px solid #009688;
        }

    .manage-profile-txt-field textarea {
        resize: none;
    }

    .manage-profile-form a {
        font-size: 18px;
        background: #1e90ff;
        padding: 9px;
        text-align: center;
        text-decoration: none;
        text-transform: capitalize;
        color: #fff;
        width: 200px;
        border-radius: 5px;
        cursor: pointer;
        box-shadow: 0 0 10px rgba(0,0,0,.2); /*rtl*/
    }

    .manage-profile-close {
        border: 2px solid #ff9999;
        background: #ffb3b3;
        padding: 15px;
        border-radius: 20px;
    }

        .manage-profile-close p {
            color: #222;
            font-weight: 600;
            padding-bottom: 20px;
        }

            .manage-profile-close p span {
                color: #f00;
                font-weight: 600;
                display: block;
                padding-top: 10px;
                padding-bottom: 10px;
            }

        .manage-profile-close .btn {
            font-size: 18px;
            background: #ff3333;
            padding: 9px;
            text-align: center;
            text-decoration: none;
            text-transform: capitalize;
            color: #fff;
            width: 200px;
            border-radius: 5px;
            cursor: pointer;
            box-shadow: 0 0 10px rgba(0,0,0,.2); /*rtl*/
        }



</style>





