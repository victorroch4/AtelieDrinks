@model IEnumerable<AtelieDrinks.Models.Historico>

@{
    ViewData["Title"] = "Index";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Insumos</title>



</head>
<body>
    <div class="cabecalho">
        <div class="container">
            <img src="~/images/coqueteis.png" alt="drinks" class="img-cabecalho">
            <div class="texto">
                <h1>Historico</h1>
            </div>
        </div>
    </div>
    <div class="meio">
        <h2>Todos Orçamentos</h2>

        <a href="@Url.Action("Create")" class="add-btn">
            <div class="add-box">
                <img src="~/images/icon-mais.svg" alt="mais" height="15px" width="15px">
                <p style="color:green" class="add-txt">Adicionar</p>
            </div>
        </a>


        <div class="search-box">
            <input type="text" class="search-txt" id="search-input" placeholder="">
            <a href="#" class="search-btn">
                <img src="~/images/lupa.svg" alt="lupa" height="20px" width="20px">
            </a>
        </div>
    </div>
    <div class="separa">
        <div class="table-container">
            <h1 class="heading">Tabela de Insumos</h1>
            <div class="tabela-overflow">
                <table class="tabela" id="tabela-insumos">
                    <thead>
                        <tr>
                            <th>
                                Alterações
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.numero_pessoas)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.custo_operacional)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.custo_total_insumos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.custo_total)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.base_orcamento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.comissao_comercial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.comissao_gerencia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.valor_primario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.custo_por_pessoa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.valor_arredondado_pra_cima)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.margem_negociacao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.valor_orcamento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.previsao_lucro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.qtde_convidados)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.qtde_drinks)
                            </th>
                        </tr>
                    </thead>
                    <tbody class="table-content">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="">
                                    <a asp-action="Edit" asp-route-id="@item.id_historico"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.id_historico"><i class="fas fa-info-circle"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.id_historico"><i class="fas fa-trash-alt"></i></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.numero_pessoas)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.custo_operacional)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.custo_total_insumos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.custo_total)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.base_orcamento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.comissao_comercial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.comissao_gerencia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.valor_primario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.custo_por_pessoa)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.valor_arredondado_pra_cima)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.margem_negociacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.valor_orcamento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.previsao_lucro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.qtde_convidados)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.qtde_drinks)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</body>
</html>


<style>
    .tabela-overflow {
        overflow: auto;

    }
    thead{
        justify-content:center;
        align-items:center;
        white-space:nowrap;
    }
</style>
